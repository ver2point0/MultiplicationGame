<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="45dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mimap/ic_launcher"/>

    <Button
        android:id="@+id/bt_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_play"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/bt_high_scores"
        android:layout_alignEnd="@+id/bt_high_scores"
        android:layout_alignLeft="@+id/bt_high_scores"
        android:layout_alignStart="@+id/bt_high_scores"/>

    <Button
        android:id="@+id/bt_high_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_high_scores"
        android:layout_below="@+id/bt_play"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/bt_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_quit"
        android:layout_below="@+id/bt_high_scores"
        android:layout_alignRight="@+id/bt_high_scores"
        android:layout_alignEnd="@+id/bt_high_scores"
        android:layout_alignLeft="@+id/bt_high_scores"
        android:layout_alignStart="@+id/bt_high_scores"/>

</RelativeLayout>
